CREATE OR REPLACE PROCEDURE DELETE_LIMOUSINE
(
  vin_param IN VARCHAR2,
  success_status OUT NUMBER
)
IS
  booking_count INTEGER;
BEGIN
  SELECT COUNT(*) INTO booking_count FROM booking WHERE booking_limousine_vin = vin_param;
  IF booking_count = 0 THEN
    DELETE FROM limousine WHERE limo_vin = vin_param;
    success_status := 1;
  ELSE
    success_status := 0;
  END IF;
END;

